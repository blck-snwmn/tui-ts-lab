{
  "name": "tui-ts-lab",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "fmt": "oxfmt apps/ --write",
    "fmt:check": "oxfmt apps/ --check",
    "lint": "oxlint --type-aware --type-check --deny-warnings .",
    "lint:fix": "oxlint --type-aware --type-check --deny-warnings . --fix"
  },
  "devDependencies": {
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1"
  }
}
